---
import Layout from '../../layouts/Layout.astro';
import ContactComponent from '@/components/Contact';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } }
  ];
}

const { lang } = Astro.params;
const validLang = lang === 'en' || lang === 'es' ? lang : 'en';

const translations = {
  en: {
    title: "Contact - Sergio Domínguez Pérez",
    description: "Get in touch with Sergio Domínguez Pérez, a Full-Stack Developer based in Madrid, Spain."
  },
  es: {
    title: "Contacto - Sergio Domínguez Pérez",
    description: "Ponte en contacto con Sergio Domínguez Pérez, Desarrollador Full-Stack ubicado en Madrid, España."
  }
};

const t = translations[validLang];
export const prerender = true;
---

<Layout title={t.title} description={t.description} lang={validLang}>
  <ContactComponent lang={validLang} client:load />
</Layout>

