---
import "../styles/global.css";
const {
  baseUrl = Astro.request.headers.get('host'),
  title = "Sergio Domínguez Pérez - Here I Am",
  description = "Programador Full Stack con conocimientos en 📚Desarrollo |📱Aplicaciones | 🛠️Técnico Informático |🐬MySQL | 🐍Python |☕Java | 🐘PHP | 🐈Git | 🐳DevOps | ⚛️Web Frameworks |🖨️Adobe & Office",
  children,
} = Astro.props;
// Año actual para el footer
const currentYear = new Date().getFullYear();
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Título dinámico -->
    <title>{title}</title>

    <!-- Meta Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta property="og:url" content={baseUrl} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />

    <!-- Fuentes de Google -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
    />
    <!-- Styles -->

    <!-- Scripts -->
    <script src="../scripts/scrollTitle.js"></script>
  </head>
  <body class="bg-gray-900 font-sans text-white">
    <!-- Header -->
    <header
      class="top-0 left-0 z-10 fixed flex justify-center items-center bg-gray-800 w-full h-16"
    >
      <nav class="space-x-4 text-center">
        <!-- Links a secciones -->
        <a href="#home" class="text-lg text-white hover:text-gray-400">Inicio</a
        >
        <a href="#about" class="text-lg text-white hover:text-gray-400"
          >Sobre mí</a
        >
        <a href="#projects" class="text-lg text-white hover:text-gray-400"
          >Proyectos</a
        >
        <a href="#contact" class="text-lg text-white hover:text-gray-400"
          >Contacto</a
        >
      </nav>
    </header>

    <!-- Contenido principal -->
    <main class="pt-16">
      <div class="bg-logo-hereiam"></div>
      <slot {children} />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 p-4 text-center text-sm">
      Here-I-Am © {currentYear} Sergio Domínguez Pérez. Todos los derechos reservados.
    </footer>
  </body>
</html>
