---
import "../styles/global.css";
import Header from "../components/structural/Header.astro";
import Footer from "../components/structural/Footer.astro";
const {
  baseUrl = Astro.request.headers.get("host"),
  title = "Sergio Domínguez Pérez - Here I Am",
  description = "Programador Full Stack con conocimientos en 📚Desarrollo |📱Aplicaciones | 🛠️Técnico Informático |🐬MySQL | 🐍Python |☕Java | 🐘PHP | 🐈Git | 🐳DevOps | ⚛️Web Frameworks |🖨️Adobe & Office",
  children,
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Título dinámico -->
    <title>{title}</title>

    <!-- Meta Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta property="og:url" content={baseUrl} />

    <link rel="icon" href="/favicon.svg" />

    <!-- Fuentes de Google -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
    />
  </head>
  <body
    class="bg-pr bg-primary-a90 bg-cover bg-center bg-fixed font-sans text-white"
  >
    <div id="pageBackground" class="">
      <div class="bg-main-corpo bg-main-corpo-before animate-pseudoMove"></div>
      <div class="bg-main-corpo w-[300%] h-[300%] left-[-100%] top-[-100%]">
      </div>
    </div>

    <div class="corpo-container">
      <!-- Header -->
      <Header />

      <!-- Contenido principal -->
      <main class="main-container">
        <slot {children} />
      </main>

      <!-- Footer -->
      <Footer />
    </div>
    <script src="../scripts/scrollTitle.js"></script>
    <script src="../scripts/bgAnimation.js"></script>
  </body>
</html>
