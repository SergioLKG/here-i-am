---
import "../styles/global.css";

// Props para personalizar el layout
const { title = "APIs Dashboard - Here I Am", apis = [] } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="icon" href="/favicon.svg" />
        <link
          rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
        />
        <meta name="robots" content="noindex">
        <meta name="googlebot" content="noindex">
      </head>
  <body class="bg-gray-100 text-gray-900">
    <header class="bg-blue-600 py-4 text-white">
      <div class="mx-auto px-4 container">
        <h1 class="font-bold text-2xl">{title}</h1>
      </div>
    </header>
    <main class="mx-auto px-4 py-8 container">
      <div class="bg-white shadow-md p-6 rounded-lg">
        {
          Astro.slots.default ? (
            <slot />
          ) : (
            <p class="text-gray-600">No se han cargado APIs.</p>
          )
        }
      </div>
    </main>
    <footer class="bg-gray-800 py-4 text-gray-300">
      <div class="mx-auto px-4 text-sm container">
        <p>
          &copy; {new Date().getFullYear()} - APIs Dashboard. Todos los derechos
          reservados.
        </p>
      </div>
    </footer>
  </body>
</html>
