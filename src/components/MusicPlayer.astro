---
// Importa el componente desde un archivo JavaScript si lo deseas
// Aqu√≠ asumimos que la data viene del servidor (ver paso 4).
const { playlist, token } = Astro.props;
---

<div class="bg-gray-900 shadow-md mx-auto p-4 rounded-lg max-w-sm text-white">
  <div class="flex items-center gap-4">
    <img
      src={playlist.images[0].url}
      alt="Playlist cover"
      class="rounded-lg w-16 h-16"
    />
    <div>
      <h3 class="font-semibold text-lg">{playlist.name}</h3>
      <p class="text-gray-400 text-sm">By {playlist.owner.display_name}</p>
    </div>
  </div>
  <div class="mt-4">
    <audio id="player" class="w-full" controls>
      <source
        src="{playlist.tracks.items[0].track.preview_url}"
        type="audio/mpeg"
      />
      Your browser does not support the audio element.
    </audio>
  </div>
  <div class="flex justify-between mt-4">
    <button class="bg-gray-800 px-4 py-2 rounded-lg">Prev</button>
    <button class="bg-green-500 px-4 py-2 rounded-lg">Play</button>
    <button class="bg-gray-800 px-4 py-2 rounded-lg">Next</button>
  </div>
</div>
