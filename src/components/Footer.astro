---
import { Github, Linkedin, Mail, FileText } from 'lucide-react';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const year = new Date().getFullYear();
const resumeLink = lang === 'en' ? '/resume-sergio-dominguez-en.pdf' : '/resume-sergio-dominguez-es.pdf';

const translations = {
  en: {
    copyright: "© {year} Sergio Domínguez Pérez. All rights reserved.",
    madeWith: "Made with Astro and React"
  },
  es: {
    copyright: "© {year} Sergio Domínguez Pérez. Todos los derechos reservados.",
    madeWith: "Hecho con Astro y React"
  }
};

const t = translations[lang];
---

<footer class="w-full border-t border-gray-200 dark:border-gray-800 py-6">
  <div class="container px-4 md:px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        {t.copyright.replace('{year}', year.toString())}
      </p>
      <div class="flex items-center gap-4">
        <a href="https://github.com/SergioLKG" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
          <Github className="w-5 h-5" />
        </a>
        <a href="https://www.linkedin.com/in/sergiodominguezperez/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
          <Linkedin className="w-5 h-5" />
        </a>
        <a href="mailto:dominguezperezsergio03@gmail.com" aria-label="Email" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
          <Mail className="w-5 h-5" />
        </a>
        <a href={resumeLink} download aria-label="Download Resume" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
          <FileText className="w-5 h-5" />
        </a>
      </div>
      <p class="text-xs text-gray-500 dark:text-gray-400">
        {t.madeWith}
      </p>
    </div>
  </div>
</footer>

