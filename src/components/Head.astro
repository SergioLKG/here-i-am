---
// src/components/Head.astro
const {
  title = "Here I Am",
  description = "Mi portafolio personal con proyectos y más",
} = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />

  <!-- Título de la página (será dinámico, lo asignamos desde el componente) -->
  <title>{title}</title>

  <!-- Open Graph para redes sociales -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="/images/og-image.jpg" />
  <meta property="og:url" content="" />

  <!-- Favicon -->
  <link rel="icon" href="/favicon.webp" />

  <!-- Fuentes de Google (si las usas) -->
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
  />

  <script>
    // URL Dinámica para Open Graph utilizando JavaScript
    document.addEventListener("DOMContentLoaded", function () {
      var ogUrl = window.location.href; // Obtén la URL actual
      var metaTag = document.querySelector('meta[property="og:url"]');
      if (metaTag) {
        metaTag.setAttribute("content", ogUrl); // Establece la URL actual
      }
    });
  </script>

  <!-- Aquí puedes añadir otros metadatos, estilos adicionales, etc. -->
</head>
