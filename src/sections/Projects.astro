---
// src/sections/Projects.astro
import Card from "../components/Card.astro";

const projects = [
  {
    title: "Proyecto 1",
    description: "Descripción del Proyecto 1",
    image: "/images/proyecto1.jpg",
  },
  {
    title: "Proyecto 2",
    description: "Descripción del Proyecto 2",
    image: "/images/proyecto2.jpg",
  },
  // Añade más proyectos según sea necesario
];
---

<section
  id="projects"
  class="flex flex-col justify-center items-center bg-gray-700 h-screen text-center"
>
  <h2 class="mb-4 font-bold text-3xl">Proyectos</h2>
  <div
    class="gap-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mx-auto max-w-4xl"
  >
    {projects.map((project) => <Card {...project} />)}
  </div>
</section>
